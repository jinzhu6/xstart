IP = "127.0.0.1";
PORT_SEND = 8052;
PORT_RECV = 8051;

SOCKET_IN = Listener();
if(!SOCKET_IN.listenUDP(IP, PORT_RECV)) { fatal("FAILED TO OPEN UDP-RECV PORT!"); }
SOCKET_IN.setTimeout(2000);

SOCKET_OUT = Socket();
if(!SOCKET_OUT.openUDP(IP, PORT_SEND)) { fatal("FAILED TO OPEN UDP-SEND PORT!"); }

while(true) {
    you = ask("You: ");
    SOCKET_OUT.send(you);
    while(SOCKET_IN.receive(1024) > 0) {
        print("Bot: "+SOCKET_IN.data.toString()+"\n");
    }
}
