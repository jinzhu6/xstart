frame = Frame("utf8-text", 0, 0, 1920, 1080, "#0000ff").toggle().showCursor(true);

y = 0;
for(i = 18; i < 64; i += 2) {
	font = Font("fonts/ARIALUNI.TTF", i);
	text = Text("Test: 多数 在庫一掃セール!", font);
    text.outline = 2;
	text.y = y;
	y += i;
	frame.root["text_" + i] = text;
}

while(1) { frame.render(); sleep(1.0); }
