global SERVER = HttpServer("8080");
SERVER.onRequest = function(url, get, post, auth) {
    if(auth != "bastian:asdf") { this.sendAuthRequest("Login"); return; }
    //this.send("Welcome "+auth);
    SERVER.serveReqFile();
};
SERVER._hello = function(url, get, post, auth) {
    this.send("hello you too");
};

while(true) {
    //log("Polling ...");
    SERVER.poll(1.0);
    yield();
}

